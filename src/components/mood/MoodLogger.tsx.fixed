  const commonActivities = [
    'Exercise', 'Reading', 'Meditation', 'Social', 'Work', 'Family', 
    'Outdoors', 'Shopping', 'Cooking', 'Movies', 'Music', 'Gaming',
    'Studying', 'Cleaning', 'Travel', 'Sports', 'Art', 'Yoga'
